[user]
	name = janpaul
	email = janpaul@hey.com

[core]
	excludesfile = ~/.gitignore
	editor = vim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	symlinks = false
	autocrlf = input
	longpaths = true
	pager = "diff-so-fancy | less --tabs=4 -RFX"

[web]
	browser = safari

[push]
	default = matching

[color]
	ui = auto
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold

[include]
	path = ~/.gitconfig.local
[gpg]
	program = /usr/local/bin/gpg
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
